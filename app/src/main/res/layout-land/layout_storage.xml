<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="@color/transparent">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_4"
        card_view:cardCornerRadius="@dimen/margin_4"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_5"
                android:textAllCaps="true"
                android:textSize="@dimen/text_size_large"
                android:fontFamily="@font/lato"
                android:text="@string/menu_upgrade"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin_3"
                android:background="@color/divider"/>

            <TextView
                android:id="@+id/txt_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_2"
                android:padding="@dimen/margin_2"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center"
                android:text="@string/bundle_lagwada"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin_3"
                android:background="@color/divider"/>

            <TextView
                android:id="@+id/txt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/text_primary"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_4"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_large"
                android:fontFamily="@font/lato"
                android:text="Select Plan"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_prem"
                    android:layout_width="@dimen/width_custom_button"
                    android:layout_height="@dimen/height_custom_button"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_regular"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_marginBottom="@dimen/margin_4"
                    android:text="Premium"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_ulti"
                    android:layout_width="@dimen/width_custom_button"
                    android:layout_height="@dimen/height_custom_button"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_regular"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_marginLeft="@dimen/margin_1"
                    android:layout_marginRight="@dimen/margin_1"
                    android:layout_marginBottom="@dimen/margin_4"
                    android:text="Ultimate"/>



            </LinearLayout>

            <Spinner
                android:id="@+id/spin_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_3"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin_3"
                android:background="@color/divider"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_done"
                android:layout_width="@dimen/width_custom_button"
                android:layout_height="@dimen/height_custom_button"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_regular"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_marginBottom="@dimen/margin_6"
                android:text="@string/label_close_dialog"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>