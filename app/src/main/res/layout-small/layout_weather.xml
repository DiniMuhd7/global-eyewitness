<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="@color/transparent">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_4"
        card_view:cardCornerRadius="@dimen/margin_4"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_marker_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Loading..."
                android:textColor="@color/text_primary"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_5"
                android:textAllCaps="true"
                android:textSize="@dimen/text_size_large"
                android:fontFamily="@font/lato" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin_3"
                android:background="@color/divider"/>

            <TextView
                android:id="@+id/txt_condtion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_2"
                android:padding="@dimen/margin_2"
                android:text="Weather Condition"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_large"
                android:gravity="center" />

            <ImageView
                android:id="@+id/img_mark"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/margin_2"
                android:foreground="?attr/selectableItemBackground"
                android:padding="@dimen/margin_2"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txt_marker_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_ink"
                android:layout_gravity="center"
                android:inputType="textCapWords"
                android:text=":::"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_2"
                android:textSize="@dimen/text_size_5xl" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin_3"
                android:background="@color/divider"/>

            <TextView
                android:id="@+id/txt_marker_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_2"
                android:padding="@dimen/margin_2"
                android:text="Temperature"
                android:textColor="@color/black"

                android:textSize="@dimen/text_size_large"
                android:gravity="center" />

            <TextView
                android:id="@+id/txt_marker_temp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_ink"
                android:layout_gravity="center"
                android:text=":::"
                android:textStyle="bold|italic"
                android:layout_marginRight="@dimen/margin_1"
                android:textSize="@dimen/text_24" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin_3"
                android:background="@color/divider"/>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_gravity="center"
                android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_marker_windspeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_1"
                android:text="Wind Speed:"
                android:textColor="@color/black"

                android:textSize="@dimen/text_size_medium"
                android:gravity="center" />

            <TextView
                android:id="@+id/txt_marker_windspeed_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_ink"
                android:layout_gravity="center"
                android:text=":::"
                android:textStyle="bold|italic"
                android:layout_marginRight="@dimen/margin_1"
                android:textSize="@dimen/text_size_medium" />


            <TextView
                android:id="@+id/txt_marker_windangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_1"
                android:text="Wind Angle:"
                android:textColor="@color/black"

                android:textSize="@dimen/text_size_medium"
                android:gravity="center" />

            <TextView
                android:id="@+id/txt_marker_windangle_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_ink"
                android:layout_gravity="center"
                android:text=":::"
                android:textStyle="bold|italic"
                android:layout_marginRight="@dimen/margin_1"
                android:textSize="@dimen/text_size_medium" />




        </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin_3"
                android:background="@color/divider"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_marker_clouds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_1"

                    android:text="Humidity:"
                    android:textColor="@color/black"

                    android:textSize="@dimen/text_size_medium"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txt_marker_clouds_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_ink"
                    android:layout_gravity="center"
                    android:text=":::"
                    android:textStyle="bold|italic"
                    android:layout_marginRight="@dimen/margin_1"
                    android:textSize="@dimen/text_size_medium" />


                <TextView
                    android:id="@+id/txt_marker_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_1"

                    android:text="Clouds:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_medium"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txt_marker_humidity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_ink"
                    android:layout_gravity="center"
                    android:text=":::"
                    android:textStyle="bold|italic"
                    android:layout_marginRight="@dimen/margin_1"
                    android:textSize="@dimen/text_size_medium" />


                <TextView
                    android:id="@+id/txt_marker_pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_1"

                    android:text="Pressure:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_medium"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txt_marker_pressure_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_ink"
                    android:layout_gravity="center"
                    android:text=":::"
                    android:textStyle="bold|italic"
                    android:textSize="@dimen/text_size_medium" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin_3"
                android:background="@color/divider"/>

            <TextView
                android:id="@+id/txt_marker_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text=":::"
                android:layout_marginTop="@dimen/margin_2"
                android:padding="@dimen/margin_2"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center" />

            <TextView
                android:id="@+id/txt_marker_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_ink"
                android:layout_gravity="center"
                android:text=":::"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_1"
                android:textSize="@dimen/text_size_large" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin_3"
                android:background="@color/divider"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_done"
                android:layout_width="@dimen/width_custom_button"
                android:layout_height="@dimen/height_custom_button"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_regular"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_marginBottom="@dimen/margin_6"
                android:text="@string/label_close_dialog"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
