<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthUIActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary">


        <ImageView
            android:id="@+id/backdrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:background="@drawable/eywit"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_5"
            android:paddingRight="@dimen/margin_5"
            android:paddingTop="@dimen/margin_1">

            <TextView
                android:id="@+id/textEyeWit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_1"
                android:textAlignment="center"
                android:text="@string/welcome_message"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/textEyeWitMotto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_1"
                android:textAlignment="center"
                android:fontFamily="@font/lato"
                android:text="@string/welcome_motto"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_regular">

            </TextView>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_eyewit"
                android:layout_width="wrap_content"
                android:layout_height="?actionBarSize"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_regular"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="@string/sign_in_eyewit"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_agency"
                android:layout_width="wrap_content"
                android:layout_height="?actionBarSize"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_regular"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="@string/sign_in_agency"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_marginBottom="@dimen/margin_2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_splash_footer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/splash_footer"
                android:fontFamily="@font/lato"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_regular" />

            <TextView
                android:id="@+id/txt_splash_footer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/spl2_footer"
                android:fontFamily="@font/lato"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_regular" />

            <TextView
                android:id="@+id/txt_splash_footer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/spl3_footer"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:fontFamily="@font/lato"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_regular" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>