<RelativeLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_alignParentEnd="true"
        card_view:cardBackgroundColor="@color/colorUserCard"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cdpUser"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:src="@drawable/ic_baseline_person_24"
            android:layout_gravity="start"
            android:layout_marginTop="3dp"
            android:layout_marginStart="3dp"
            card_view:cardCornerRadius="8dp"
            />

        <TextView
            android:id="@+id/ctxt_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_marginRight="@dimen/margin_2"
            android:layout_marginLeft="@dimen/margin_8"
            android:textColor="@color/text_ink"
            android:textStyle="italic|bold"
            android:inputType="textPassword"
            android:text="eyewitness.ai"
            android:textSize="@dimen/text_size_medium" />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingStart="16dp"
            >

            <TextView
                android:id="@+id/cutterance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_4"
                android:gravity="center_vertical"
                android:text="This text is for testing purpose."
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_large"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />

        </FrameLayout>

        <TextView
            android:id="@+id/ctxt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/margin_1"
            android:layout_marginRight="@dimen/margin_2"
            android:layout_marginLeft="@dimen/margin_8"
            android:text="01/01/2050"
            android:textColor="@color/text_ink"
            android:textStyle="italic"
            android:textSize="@dimen/text_size_small" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>