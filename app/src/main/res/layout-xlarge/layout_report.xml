<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="@color/transparent">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_4"
        card_view:cardCornerRadius="@dimen/margin_4"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_3"
                android:textAllCaps="true"
                android:textSize="@dimen/text_size_large"
                android:fontFamily="@font/lato"
                android:text="@string/report_incident"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin_3"
                android:background="@color/divider"/>

            <TextView
                android:id="@+id/txt_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_2"
                android:padding="@dimen/margin_1"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center"
                android:text="@string/title_alert"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin_2"
                android:background="@color/divider"/>

            <TextView
                android:id="@+id/txt_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/text_primary"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_2"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_large"
                android:fontFamily="@font/lato"
                android:text="@string/report_guide"/>

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_2"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_large"
                android:fontFamily="@font/lato" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin_2"
                android:background="@color/divider"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_1"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_state"
                    android:layout_width="@dimen/width_custom_button"
                    android:layout_height="@dimen/height_custom_button"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_regular"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_2"
                    android:layout_marginBottom="@dimen/margin_1"
                    android:text="@string/state_string"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_country"
                    android:layout_width="@dimen/width_custom_button"
                    android:layout_height="@dimen/height_custom_button"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_regular"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_2"
                    android:layout_marginLeft="@dimen/margin_1"
                    android:layout_marginRight="@dimen/margin_1"
                    android:layout_marginBottom="@dimen/margin_1"
                    android:text="@string/country_string"/>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_global"
                    android:layout_width="@dimen/width_custom_button"
                    android:layout_height="@dimen/height_custom_button"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_regular"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_2"
                    android:layout_marginBottom="@dimen/margin_1"
                    android:text="@string/global_string"/>


            </LinearLayout>

            <TextView
                android:id="@+id/txt_agency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/text_primary"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_2"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_large"
                android:fontFamily="@font/lato"
                android:text="Loading..."/>

            <Spinner
                android:id="@+id/spin_agency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_2"
               />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin_2"
                android:background="@color/divider"/>

            <TextView
                android:id="@+id/txt_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/text_primary"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_2"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_large"
                android:fontFamily="@font/lato"
                android:text="@string/report_type"/>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/margin_3"
               android:layout_gravity="center"
               android:orientation="horizontal">

               <ImageView
                   android:id="@+id/img_police"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/ic_circle"
                   android:backgroundTint="@color/white_transparent"
                   android:foreground="?attr/selectableItemBackground"
                   android:padding="@dimen/margin_2"
                   android:layout_marginLeft="@dimen/margin_2"
                   card_view:srcCompat="@drawable/police">

               </ImageView>
               <ImageView
                   android:id="@+id/img_general"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/ic_circle"
                   android:backgroundTint="@color/white_transparent"
                   android:foreground="?attr/selectableItemBackground"
                   android:padding="@dimen/margin_2"
                   android:layout_marginLeft="@dimen/margin_2"
                   card_view:srcCompat="@drawable/general"/>
               <ImageView
                   android:id="@+id/img_accident"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/ic_circle"
                   android:backgroundTint="@color/white_transparent"
                   android:foreground="?attr/selectableItemBackground"
                   android:padding="@dimen/margin_2"
                   android:layout_marginLeft="@dimen/margin_2"
                   card_view:srcCompat="@drawable/accident"/>
               <ImageView
                   android:id="@+id/img_flood"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/ic_circle"
                   android:backgroundTint="@color/white_transparent"
                   android:foreground="?attr/selectableItemBackground"
                   android:padding="@dimen/margin_2"
                   android:layout_marginLeft="@dimen/margin_2"
                   card_view:srcCompat="@drawable/flood"/>
               <ImageView
                   android:id="@+id/img_rape"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/ic_circle"
                   android:backgroundTint="@color/white_transparent"
                   android:foreground="?attr/selectableItemBackground"
                   android:padding="@dimen/margin_2"
                   android:layout_marginLeft="@dimen/margin_2"
                   card_view:srcCompat="@drawable/rape"/>

           </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_police"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/channel_1"
                    android:textSize="@dimen/text_size_small"
                    android:padding="@dimen/margin_2"
                    android:layout_marginLeft="@dimen/margin_2">
                </TextView>

                <TextView
                    android:id="@+id/txt_assault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/channel_5"
                    android:padding="@dimen/margin_2"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginLeft="@dimen/margin_2">
                </TextView>
                <TextView
                    android:id="@+id/txt_accident"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/channel_2"
                    android:padding="@dimen/margin_2"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginLeft="@dimen/margin_2">
                </TextView>
                <TextView
                    android:id="@+id/txt_flood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/channel_7"
                    android:padding="@dimen/margin_2"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginLeft="@dimen/margin_2">
                </TextView>
                <TextView
                    android:id="@+id/txt_rape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/Assault"
                    android:padding="@dimen/margin_2"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginLeft="@dimen/margin_1">
                </TextView>

            </LinearLayout>
           <View
               android:id="@+id/id_line"
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:layout_marginTop="@dimen/margin_3"
               android:background="@color/divider"/>


           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/margin_3"
               android:layout_gravity="center"
               android:orientation="horizontal">
               <ImageView
                   android:id="@+id/img_robbery"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/ic_circle"
                   android:backgroundTint="@color/white_transparent"
                   android:foreground="?attr/selectableItemBackground"
                   android:padding="@dimen/margin_2"
                   android:layout_marginLeft="@dimen/margin_2"
                   card_view:srcCompat="@drawable/robbery"/>
               <ImageView
                   android:id="@+id/img_drug"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/ic_circle"
                   android:backgroundTint="@color/white_transparent"
                   android:foreground="?attr/selectableItemBackground"
                   android:padding="@dimen/margin_2"
                   android:layout_marginLeft="@dimen/margin_2"
                   card_view:srcCompat="@drawable/drug"/>
               <ImageView
                   android:id="@+id/img_murder"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/ic_circle"
                   android:backgroundTint="@color/white_transparent"
                   android:foreground="?attr/selectableItemBackground"
                   android:padding="@dimen/margin_2"
                   android:layout_marginLeft="@dimen/margin_2"
                   card_view:srcCompat="@drawable/murder"/>
               <ImageView
                   android:id="@+id/img_fire"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/ic_circle"
                   android:backgroundTint="@color/white_transparent"
                   android:foreground="?attr/selectableItemBackground"
                   android:padding="@dimen/margin_2"
                   android:layout_marginLeft="@dimen/margin_2"
                   card_view:srcCompat="@drawable/fire"/>
               <ImageView
                   android:id="@+id/img_terrorist"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/ic_circle"
                   android:backgroundTint="@color/white_transparent"
                   android:foreground="?attr/selectableItemBackground"
                   android:padding="@dimen/margin_2"
                   android:layout_marginLeft="@dimen/margin_2"
                   card_view:srcCompat="@drawable/terrorist"/>

           </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/txt_robbery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/channel_3"
                    android:textSize="@dimen/text_size_small"
                    android:padding="@dimen/margin_2"
                    android:layout_marginLeft="@dimen/margin_2">
                </TextView>

                <TextView
                    android:id="@+id/txt_drug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drugs"
                    android:padding="@dimen/margin_2"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginLeft="@dimen/margin_2">
                </TextView>
                <TextView
                    android:id="@+id/txt_murder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/channel_4"
                    android:padding="@dimen/margin_2"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginLeft="@dimen/margin_2">
                </TextView>
                <TextView
                    android:id="@+id/txt_fire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/channel_6"
                    android:padding="@dimen/margin_2"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginLeft="@dimen/margin_2">
                </TextView>
                <TextView
                    android:id="@+id/txt_terrorism"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/channel_10"
                    android:padding="@dimen/margin_2"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginLeft="@dimen/margin_2">
                </TextView>

            </LinearLayout>

            <!--
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cardList"
                android:visibility="visible"
                android:layout_below="@+id/id_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/card_list_margin_bottom" />
               -->

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin_3"
                android:background="@color/divider"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_done"
                android:layout_width="@dimen/width_custom_button"
                android:layout_height="@dimen/height_custom_button"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_regular"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_3"
                android:layout_marginBottom="@dimen/margin_3"
                android:text="@string/label_close_dialog"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>